{
  "extends": "../../tsconfig.json",
  "sourceMap": true,
  "strict": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": [
      "esnext"
    ],
    "paths": {
      "~/config/*": [
        "config/*"
      ],
      "~/start/*": [
        "start/*"
      ],
      "~/tests/*": [
        "tests/*"
      ],
      "~/*": [
        "app/*"
      ]
    }
  }
}
